def calculate_uk_payroll(annual_gross_salary, ni_category='A'):
    """
    Calculates illustrative monthly PAYE and NICs for the 2025/2026 tax year.
    Uses basic tax code 1257L and NI category A.
    Note: Real-world payroll requires professional, HMRC-compliant software.
    """
    
    # Constants for 2025/2026 (illustrative)
    PERSONAL_ALLOWANCE = 12570
    BASIC_RATE_THRESHOLD = 50270
    HIGHER_RATE_THRESHOLD = 150000
    
    BASIC_RATE = 0.20
    HIGHER_RATE = 0.40
    ADDITIONAL_RATE = 0.45
    
    NI_PT_THRESHOLD_MONTHLY = 1048 # Primary Threshold (approx £12,570 annually)
    NI_UEL_THRESHOLD_MONTHLY = 4189 # Upper Earnings Limit (approx £50,270 annually)
    NI_RATE_BELOW_UEL = 0.08 # Example employee rate
    NI_RATE_ABOVE_UEL = 0.02 # Example employee rate

    # Monthly Gross Pay
    monthly_gross = annual_gross_salary / 12

    # --- 1. Calculate PAYE (Income Tax) ---
    taxable_income = max(0, annual_gross_salary - PERSONAL_ALLOWANCE)
    paye_annual = 0

    if taxable_income > 0:
        if taxable_income <= (BASIC_RATE_THRESHOLD - PERSONAL_ALLOWANCE):
            paye_annual = taxable_income * BASIC_RATE
        elif taxable_income <= (HIGHER_RATE_THRESHOLD - PERSONAL_ALLOWANCE):
            basic_band_income = BASIC_RATE_THRESHOLD - PERSONAL_ALLOWANCE
            paye_annual = basic_band_income * BASIC_RATE
            paye_annual += (taxable_income - basic_band_income) * HIGHER_RATE
        else:
            basic_band_income = BASIC_RATE_THRESHOLD - PERSONAL_ALLOWANCE
            higher_band_income = HIGHER_RATE_THRESHOLD - PERSONAL_ALLOWANCE - basic_band_income
            paye_annual = basic_band_income * BASIC_RATE
            paye_annual += higher_band_income * HIGHER_RATE
            paye_annual += (taxable_income - basic_band_income - higher_band_income) * ADDITIONAL_RATE
            
    monthly_paye = paye_annual / 12

    # --- 2. Calculate NICs (National Insurance Contributions) ---
    employee_nics = 0
    if monthly_gross > NI_PT_THRESHOLD_MONTHLY:
        # Calculate NICs up to the UEL
        income_between_pt_uel = min(monthly_gross, NI_UEL_THRESHOLD_MONTHLY) - NI_PT_THRESHOLD_MONTHLY
        employee_nics += income_between_pt_uel * NI_RATE_BELOW_UEL
        
        # Calculate NICs above the UEL
        if monthly_gross > NI_UEL_THRESHOLD_MONTHLY:
            income_above_uel = monthly_gross - NI_UEL_THRESHOLD_MONTHLY
            employee_nics += income_above_uel * NI_RATE_ABOVE_UEL
            
    # --- 3. Calculate Net Pay ---
    monthly_deductions = monthly_paye + employee_nics
    monthly_net_pay = monthly_gross - monthly_deductions

    # --- 4. Return Results ---
    return {
        "Monthly Gross Pay": round(monthly_gross, 2),
        "Monthly PAYE (Tax)": round(monthly_paye, 2),
        "Monthly NICs": round(employee_nics, 2),
        "Total Monthly Deductions": round(monthly_deductions, 2),
        "Monthly Net Pay": round(monthly_net_pay, 2)
    }

# Example Usage:
salary_input = 35000 # Example annual salary
results = calculate_uk_payroll(salary_input)
print(f"--- Payroll Calculation for £{salary_input} annually ---")
for key, value in results.items():
    print(f"{key}: £{value}")

